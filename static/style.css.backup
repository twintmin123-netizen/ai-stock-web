/* ==========================================
   Design System & CSS Variables
   ========================================== */
:root {
    /* Colors - Dark Theme */
    --color-bg-primary: #0a0e1a;
    --color-bg-secondary: #0f172a;
    --color-bg-tertiary: #1e293b;
    --color-bg-card: rgba(30, 41, 59, 0.6);

    /* Gradients */
    --gradient-primary: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
    --gradient-success: linear-gradient(135deg, #10b981 0%, #059669 100%);
    --gradient-warning: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    --gradient-danger: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    --gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);

    /* Text Colors */
    --color-text-primary: #f8fafc;
    --color-text-secondary: #cbd5e1;
    --color-text-tertiary: #94a3b8;
    --color-text-muted: #64748b;

    /* Accent Colors */
    --color-primary: #3b82f6;
    --color-primary-hover: #2563eb;
    --color-success: #10b981;
    --color-warning: #f59e0b;
    --color-danger: #ef4444;
    --color-info: #06b6d4;

    /* Border & Dividers */
    --color-border: rgba(148, 163, 184, 0.1);
    --color-border-hover: rgba(148, 163, 184, 0.2);

    /* Shadows */
    --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.5);
    --shadow-xl: 0 16px 48px rgba(0, 0, 0, 0.6);
    --shadow-glow: 0 0 20px rgba(59, 130, 246, 0.3);

    /* Spacing */
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;

    /* Border Radius */
    --radius-sm: 0.5rem;
    --radius-md: 0.75rem;
    --radius-lg: 1rem;
    --radius-xl: 1.5rem;

    /* Typography */
    --font-family-base: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-family-mono: 'JetBrains Mono', 'Courier New', monospace;

    /* Transitions */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);

    /* Z-Index */
    --z-header: 100;
    --z-sidebar: 200;
    --z-overlay: 300;
    --z-modal: 400;
}

/* ==========================================
   Base Styles & Reset
   ========================================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    font-family: var(--font-family-base);
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Animated Background */
body::before {
    content: '';
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.08) 0%, transparent 50%);
    animation: backgroundShift 20s ease infinite;
    pointer-events: none;
    z-index: 0;
}

@keyframes backgroundShift {

    0%,
    100% {
        transform: translate(0, 0);
    }

    50% {
        transform: translate(-5%, -5%);
    }
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    position: relative;
    z-index: 1;
}

/* ==========================================
   Header
   ========================================== */
.header {
    position: sticky;
    top: 0;
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--color-border);
    z-index: var(--z-header);
    box-shadow: var(--shadow-md);
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-md) 0;
    gap: var(--spacing-lg);
}

.logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.logo-icon {
    font-size: 2rem;
    filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.5));
}

.logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.nav-tabs {
    display: flex;
    gap: var(--spacing-sm);
    background: var(--color-bg-card);
    padding: var(--spacing-xs);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
}

.nav-tab {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-lg);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-base);
    position: relative;
}

.nav-tab:hover {
    color: var(--color-text-primary);
    background: rgba(255, 255, 255, 0.05);
}

.nav-tab.active {
    color: var(--color-text-primary);
    background: var(--gradient-primary);
    box-shadow: var(--shadow-glow);
}

.tab-icon {
    font-size: 1.2rem;
}

.chatbot-toggle {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-lg);
    background: var(--gradient-primary);
    border: none;
    border-radius: var(--radius-md);
    color: white;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-md);
}

.chatbot-toggle:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
}

.chatbot-toggle:active {
    transform: translateY(0);
}

.chatbot-icon {
    font-size: 1.2rem;
}

/* ==========================================
   Main Content
   ========================================== */
.main {
    min-height: calc(100vh - 80px);
    padding: var(--spacing-xl) 0;
}

.section {
    margin-bottom: var(--spacing-2xl);
}

.section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-lg);
}

.section-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
}

.refresh-badge {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--color-bg-card);
    border-radius: var(--radius-md);
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    backdrop-filter: blur(10px);
}

.pulse-dot {
    width: 8px;
    height: 8px;
    background: var(--color-success);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        opacity: 1;
        transform: scale(1);
    }

    50% {
        opacity: 0.5;
        transform: scale(1.2);
    }
}

/* Tab Content */
.tab-content {
    display: none;
    animation: fadeIn var(--transition-base);
}

.tab-content.active {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ==========================================
   Market Indicators
   ========================================== */
/* Market Tabs */
.market-tabs {
    display: flex;
    gap: var(--spacing-xs);
    background: var(--color-bg-tertiary);
    padding: 4px;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
}

.market-tab {
    padding: var(--spacing-xs) var(--spacing-md);
    border: none;
    background: transparent;
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all var(--transition-fast);
    white-space: nowrap;
}

.market-tab:hover {
    color: var(--color-text-primary);
    background: rgba(255, 255, 255, 0.05);
}

.market-tab.active {
    background: var(--color-primary);
    color: white;
    box-shadow: var(--shadow-sm);
}

.market-section {
    margin-bottom: var(--spacing-xl);
}

.subsection-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-sm);
    border-left: 3px solid var(--color-primary);
}

.indicators-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
}

.indicator-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    transition: all var(--transition-base);
    position: relative;
}

.indicator-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity var(--transition-base);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
}

.indicator-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-lg);
    z-index: 20;
}

.indicator-card:hover::before {
    opacity: 1;
}

.indicator-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-md);
}

.indicator-label {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    font-weight: 500;
}

.indicator-icon {
    font-size: 1.5rem;
}

.indicator-badge {
    padding: var(--spacing-xs) var(--spacing-sm);
    background: rgba(59, 130, 246, 0.1);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
}

.indicator-value {
    font-family: var(--font-family-mono);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
}

.indicator-change {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-family: var(--font-family-mono);
    font-size: 0.9rem;
    font-weight: 600;
}

.indicator-change.positive {
    color: var(--color-success);
}

.indicator-change.negative {
    color: var(--color-danger);
}

.indicator-change.neutral {
    color: var(--color-text-muted);
}

/* Tooltip Styles */
.indicator-tooltip {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    padding: var(--spacing-md);
    background: rgba(15, 23, 42, 0.95);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    line-height: 1.5;
    z-index: 100;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--transition-base);
    pointer-events: none;
    box-shadow: var(--shadow-lg);
    margin-top: var(--spacing-xs);
    white-space: pre-line;
}

.indicator-card:hover .indicator-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

/* ==========================================
   Portfolio
   ========================================== */
.portfolio-empty {
    text-align: center;
    padding: var(--spacing-2xl);
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 2px dashed var(--color-border);
    border-radius: var(--radius-lg);
}

.empty-icon {
    font-size: 4rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
}

.empty-text {
    color: var(--color-text-tertiary);
    font-size: 1.1rem;
}

/* ==========================================
   Search
   ========================================== */
.search-container {
    margin-bottom: var(--spacing-xl);
    position: relative;
}

.search-box {
    position: relative;
    display: flex;
    align-items: center;
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-md);
    transition: all var(--transition-base);
}

.search-box:focus-within {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1), var(--shadow-md);
}

.search-icon {
    font-size: 1.5rem;
    margin-right: var(--spacing-md);
    color: var(--color-text-tertiary);
}

.search-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-size: 1.1rem;
    color: var(--color-text-primary);
    font-family: var(--font-family-base);
}

.search-input::placeholder {
    color: var(--color-text-muted);
}

.search-clear {
    background: var(--color-bg-tertiary);
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    color: var(--color-text-secondary);
    font-size: 1.2rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-clear:hover {
    background: var(--color-danger);
    color: white;
}

.search-results {
    position: absolute;
    top: calc(100% + var(--spacing-sm));
    left: 0;
    right: 0;
    background: var(--color-bg-secondary);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    max-height: 400px;
    overflow-y: auto;
    z-index: 50;
}

.search-result-item {
    padding: var(--spacing-md);
    border-bottom: 1px solid var(--color-border);
    cursor: pointer;
    transition: all var(--transition-fast);
}

.search-result-item:last-child {
    border-bottom: none;
}

.search-result-item:hover {
    background: var(--color-bg-card);
}

.result-ticker {
    font-family: var(--font-family-mono);
    font-weight: 700;
    color: var(--color-primary);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xs);
}

.result-name {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
}

/* ==========================================
   Analysis
   ========================================== */
.analysis-container {
    position: relative;
}

.loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(10, 14, 26, 0.9);
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-lg);
    z-index: 10;
    border-radius: var(--radius-lg);
}

.loading-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid var(--color-bg-tertiary);
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    animation: rotate 10s linear infinite;
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.action-label {
    font-size: 0.95rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.9;
    margin-bottom: var(--spacing-sm);
    position: relative;
    z-index: 1;
}

.action-value {
    font-size: 2.5rem;
    font-weight: 800;
    position: relative;
    z-index: 1;
}

/* Scores Grid */
.scores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
}

.score-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    transition: all var(--transition-base);
}

.score-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.score-title {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
}

.score-value-wrapper {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
}

.score-level {
    font-size: 1.3rem;
    font-weight: 700;
}

.score-number {
    font-family: var(--font-family-mono);
    font-size: 1rem;
    color: var(--color-text-muted);
}

.score-description {
    font-size: 0.85rem;
    color: var(--color-text-tertiary);
    line-height: 1.5;
}

/* Chart Card */
.chart-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
}

.chart-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-lg);
}

.chart-container {
    position: relative;
    height: 350px;
}

/* Metrics */
.metrics-section,
.fundamentals-section {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
}

.metrics-title,
.fundamentals-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-lg);
}

.metrics-grid,
.fundamentals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--spacing-lg);
}

.metric-item,
.fundamental-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.metric-label,
.fundamental-label {
    font-size: 0.85rem;
    color: var(--color-text-tertiary);
    font-weight: 500;
}

.metric-value,
.fundamental-value {
    font-family: var(--font-family-mono);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
}

/* Commentary */
.commentary-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
}

.commentary-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-lg);
}

.commentary-content {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    white-space: pre-wrap;
}

/* News */
.news-section {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
}

.news-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-lg);
}

.news-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.news-item {
    padding: var(--spacing-md);
    background: rgba(255, 255, 255, 0.02);
    border-radius: var(--radius-md);
    border-left: 3px solid var(--color-primary);
    transition: all var(--transition-fast);
}

.news-item:hover {
    background: rgba(255, 255, 255, 0.05);
}

.news-item-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
    line-height: 1.4;
}

.news-item-meta {
    font-size: 0.85rem;
    color: var(--color-text-muted);
}

/* ==========================================
   Chatbot Sidebar
   ========================================== */
.chatbot-sidebar {
    position: fixed;
    top: 0;
    right: -400px;
    width: 400px;
    height: 100vh;
    background: var(--color-bg-secondary);
    backdrop-filter: blur(20px);
    border-left: 1px solid var(--color-border);
    box-shadow: var(--shadow-xl);
    z-index: var(--z-sidebar);
    display: flex;
    flex-direction: column;
    transition: right var(--transition-slow);
}

.chatbot-sidebar.open {
    right: 0;
}

.chatbot-header {
    padding: var(--spacing-lg);
    border-bottom: 1px solid var(--color-border);
    background: var(--gradient-primary);
}

.chatbot-header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.chatbot-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: white;
}

.chatbot-close {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    color: white;
    font-size: 1.2rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
}

.chatbot-close:hover {
    background: rgba(255, 255, 255, 0.3);
}

.chatbot-messages {
    flex: 1;
    overflow-y: auto;
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.chat-message {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    animation: messageSlideIn var(--transition-base);
}

@keyframes messageSlideIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.chat-message.user .message-content {
    background: var(--gradient-primary);
    color: white;
    align-self: flex-end;
    max-width: 80%;
}

.chat-message.assistant .message-content {
    background: var(--color-bg-card);
    color: var(--color-text-primary);
    align-self: flex-start;
    max-width: 85%;
}

.message-content {
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    line-height: 1.6;
    font-size: 0.95rem;
}

.chatbot-input-container {
    padding: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-tertiary);
}

.chatbot-controls {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
}

.voice-button,
.voice-toggle {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    font-size: 1.2rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
}

.voice-button:hover,
.voice-toggle:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    transform: scale(1.05);
}

.voice-button.active,
.voice-toggle.active {
    background: var(--color-danger);
    border-color: var(--color-danger);
}

.chatbot-input-wrapper {
    display: flex;
    gap: var(--spacing-sm);
}

.chatbot-input {
    flex: 1;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    color: var(--color-text-primary);
    font-size: 0.95rem;
    outline: none;
    transition: all var(--transition-fast);
}

.chatbot-input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.chatbot-send {
    background: var(--gradient-primary);
    border: none;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    color: white;
    font-size: 1.2rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
}

.chatbot-send:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-glow);
}

.chatbot-send:active {
    transform: scale(0.95);
}

/* ==========================================
   Skeleton Loaders
   ========================================== */
.skeleton {
    pointer-events: none;
}

.skeleton-line {
    height: 20px;
    background: linear-gradient(90deg,
            var(--color-bg-tertiary) 0%,
            rgba(148, 163, 184, 0.1) 50%,
            var(--color-bg-tertiary) 100%);
    background-size: 200% 100%;
    border-radius: var(--radius-sm);
    animation: shimmer 1.5s ease-in-out infinite;
    margin-bottom: var(--spacing-sm);
}

.skeleton-line.short {
    width: 60%;
}

@keyframes shimmer {
    0% {
        background-position: -200% 0;
    }

    100% {
        background-position: 200% 0;
    }
}

/* ==========================================
   Responsive Design
   ========================================== */
@media (max-width: 768px) {
    .container {
        padding: 0 var(--spacing-md);
    }

    .header-content {
        flex-wrap: wrap;
    }

    .nav-tabs {
        order: 3;
        width: 100%;
        justify-content: center;
    }

    .tab-label {
        display: none;
    }

    .chatbot-label {
        display: none;
    }

    .section-title {
        font-size: 1.5rem;
    }

    .indicators-grid {
        grid-template-columns: 1fr;
    }

    .scores-grid {
        grid-template-columns: 1fr;
    }

    .chatbot-sidebar {
        width: 100%;
        right: -100%;
    }

    .chatbot-sidebar.open {
        right: 0;
    }
}

/* ==========================================
   Utility Classes
   ========================================== */
.text-success {
    color: var(--color-success);
}

.text-warning {
    color: var(--color-warning);
}

.text-danger {
    color: var(--color-danger);
}

.text-info {
    color: var(--color-info);
}

.text-muted {
    color: var(--color-text-muted);
}

.hidden {
    display: none !important;
}

/* ==========================================
   Sub Tabs (Analysis Section)
   ========================================== */
.sub-nav-tabs {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--spacing-xs);
    overflow-x: auto;
    /* Allow scrolling on small screens */
}

.sub-nav-tab {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-lg);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-base);
    white-space: nowrap;
}

.sub-nav-tab:hover {
    color: var(--color-text-primary);
    background: rgba(255, 255, 255, 0.05);
}

.sub-nav-tab.active {
    color: var(--color-text-primary);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-bottom-color: transparent;
    position: relative;
    top: 1px;
    /* Overlap border */
    border-bottom: 2px solid var(--color-primary);
}

.sub-tab-content {
    display: none;
    animation: fadeIn var(--transition-base);
}

.sub-tab-content.active {
    display: grid;
    /* Use grid for the content layout */
    gap: var(--spacing-lg);
}

/* Specific layout for Analysis tab */
.sub-tab-content[data-sub-tab-content="analysis"] {
    grid-template-columns: 1fr;
}

@media (min-width: 1024px) {
    .sub-tab-content[data-sub-tab-content="analysis"] {
        grid-template-columns: repeat(2, 1fr);
    }

    .action-card {
        grid-column: span 2;
    }

    .scores-grid {
        grid-column: span 2;
    }

    .metrics-section {
        grid-column: span 1;
    }

    .fundamentals-section {
        grid-column: span 1;
    }

    .commentary-card {
        grid-column: span 2;
    }
}

/* Override analysis-content grid since we now have tabs inside */
.analysis-content {
    display: block;
}

/* ==========================================
   Structured Commentary
   ========================================== */
.commentary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
}

.commentary-item {
    background: rgba(15, 23, 42, 0.5);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.commentary-item.full-width {
    grid-column: 1 / -1;
    background: rgba(59, 130, 246, 0.05);
    border-color: rgba(59, 130, 246, 0.2);
}

.commentary-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.commentary-text {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
}

.commentary-text.highlight {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text-primary);
}

.commentary-text.action-text {
    color: var(--color-success);
    font-weight: 500;
}

.voice-button.recording {
    animation: pulse-red 1.5s infinite;
}

@keyframes pulse-red {
    0% {
        box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7);
    }

    70% {
        box-shadow: 0 0 0 10px rgba(239, 68, 68, 0);
    }

    100% {
        box-shadow: 0 0 0 0 rgba(239, 68, 68, 0);
    }
}

/* Logs Section */
.logs-section {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
}

.logs-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-lg);
}

.logs-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
}

.log-item {
    background: rgba(15, 23, 42, 0.4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
}

.log-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md);
    background: rgba(255, 255, 255, 0.03);
    border-bottom: 1px solid var(--color-border);
}

.log-step-number {
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--color-primary);
    background: rgba(59, 130, 246, 0.1);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    text-transform: uppercase;
}

.log-agent-name {
    font-weight: 600;
    color: var(--color-text-primary);
}

.log-content {
    padding: var(--spacing-md);
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    white-space: pre-wrap;
    font-family: var(--font-family-mono);
}

.log-content strong {
    color: var(--color-text-primary);
    font-weight: 700;
}

.log-placeholder {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--color-text-muted);
}